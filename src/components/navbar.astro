---
const links = [
  { href: "/", label: "Home" },
  { href: "/projects", label: "Projects" },
  { href: "/about", label: "About" },
  { href: "/contact", label: "Contact"}
];
---

<header class="border-b border-gray-200">
  <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo / Name -->
    <a href="/" class="flex items-center gap-3">
        <img src="/logo/es-logo.png" class="h-8 w-auto" alt "logo" />
        <span class="font-semibold tracking-tight">Erik Swanson</span>
    </a>

    <!-- Navigation -->
    <nav class="flex items-center gap-6">
        {links.map(link => (
          <a
            href={link.href}
            class="text-gray-600 hover:text-gray-900 transition"
          >
            {link.label}
          </a>
        ))}
      <a
        href="../files/Erik_Swanson_Resume.pdf"
        Download
        class="px-6 py-3 rounded-lg bg-gray-900 text-white font-medium"
      >
        Download Resume
      </a>
  </div>
    </nav>
</header>
