---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact | Erik Swanson">
    <div class="max-w-7xl mx-auto px-6">
        <section class="max-w-2xl mx-auto py-24">
            <h1 class="text-3xl font-bold mb-4">Get in Touch</h1>

            <p class="text-gray-600 mb-10">
            Interested in working together, have a question, or want to talk about a project?
            Fill out the form below and Iâ€™ll get back to you.
            </p>

            <form
            action="https://formspree.io/f/mreegwnn"
            method="POST"
            class="space-y-6"
            >
            <!-- Name -->
            <div>
                <label class="block text-sm font-medium mb-1">Name</label>
                <input
                type="text"
                name="name"
                required
                class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900"
                />
            </div>

            <!-- Email -->
            <div>
                <label class="block text-sm font-medium mb-1">Email</label>
                <input
                type="email"
                name="email"
                required
                class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900"
                />
            </div>

            <!-- Message -->
            <div>
                <label class="block text-sm font-medium mb-1">Message</label>
                <textarea
                name="message"
                rows="5"
                required
                class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900"
                ></textarea>
            </div>

            <!-- Honeypot (spam protection) -->
            <input type="text" name="_gotcha" style="display:none" />

            <!-- Submit -->
            <button
                type="submit"
                class="inline-flex items-center justify-center px-6 py-3 rounded-lg bg-gray-900 text-white font-medium hover:bg-gray-800 transition"
            >
                Send Message
            </button>
            </form>

            <!-- Alternative contact -->
            <p class="text-sm text-gray-500 mt-6">
            Prefer email? Reach me directly at
            <a href="mailto:info@eriktswanson.dev" class="underline">
                info@eriktswanson.dev
            </a>
            </p>
        </section>
    </div>
</BaseLayout>

