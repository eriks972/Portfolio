---
import BaseLayout from "../layouts/BaseLayout.astro";
import TestCard from "../components/TestCard.svelte";
import FeaturedProjects from "../components/FeaturedProjects.svelte";
import ContactForm from "../components/ContactForm.svelte";
import { projects } from "../data/projects";
import '../styles/global.css' 
---

<BaseLayout title="Erik Swanson | Full-Stack Developer">
 <section
  class="relative min-h-[75vh] flex items-center"
  style="
    background-image: url('/backgrounds/background.avif');
    background-size: cover;
    background-position: center;
  "
>
  <!-- Overlay -->
  <div class="absolute inset-0 bg-white/70"></div>

  <!-- Content wrapper -->
  <div class="relative w-full">
    <div class="max-w-5xl mx-auto px-6">
      <!-- Eyebrow -->
      <p class="text-sm font-semibold tracking-wide text-gray-500 uppercase mb-5">
        Full-Stack Software Developer
      </p>

      <!-- Headline -->
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight leading-tight mb-6">
        I build data-driven web applications
      </h1>

      <!-- Subheading -->
      <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mb-10">
        I specialize in full-stack development using modern frameworks like
        React, Next.js, Astro, and Svelte â€” with a strong focus on performance,
        clean architecture, and real-world data.
      </p>

      <!-- CTAs -->
      <div class="flex flex-wrap gap-4">
        <a
          href="/projects"
          class="inline-flex items-center justify-center px-7 py-3 rounded-lg bg-gray-900 text-white font-medium hover:bg-gray-800 transition"
        >
          View Projects
        </a>

        <a
          href="https://github.com/eriks972"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-7 py-3 rounded-lg border border-gray-300 font-medium hover:border-gray-500 transition"
        >
          GitHub
        </a>
      </div>
    </div>
  </div>
</section>

<section class="max-w-7xl mx-auto px-6">
  <FeaturedProjects projects={projects} client:load />
</section>

<ContactForm />

</BaseLayout>


